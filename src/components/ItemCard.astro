---
type Props = {
  srcUrl: string;
  price: number;
  imgUrl: string;
  availability: string | number;
  descuento?: number;
};

const { price, srcUrl, imgUrl, availability, descuento } = Astro.props;
const isNumber = !isNaN(Number(availability));

const whatsAppMessage = `https://api.whatsapp.com/send?phone=50578731149&text=Hola MoraAzulNic! Miré este producto y quiero ${
  isNumber ? "más informacion" : "reservarlo"
}... [${imgUrl}]`;

// const newPrice = descuento > 0 ? Math.round(price * (1 - descuento / 100)) : price
