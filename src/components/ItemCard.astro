---
type Props = {
  srcUrl: string;
  price: number;
  imgUrl: string;
};

const { price, srcUrl, imgUrl } = Astro.props;
---

<div
  class="bg-white border border-gray-200 rounded-lg drop-shadow-lg dark:bg-gray-800 dark:border-gray-700 hover:scale-105 transform transition"
>
  <div class="bg-green-50 rounded-tl-lg rounded-tr-lg">
    <img
      class="mx-auto p-5 h-[353px]"
      src={`https://drive.google.com/uc?id=${srcUrl}`}
      alt="product image"
    />
  </div>
  <div class="px-5 py-5">
    <!-- <div>
            <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">{productDescription}</h5>
        </div> -->
    <div class="flex items-center justify-between">
      <span class="text-3xl font-bold text-gray-900 dark:text-white"
        >C${price}</span
      >
      <a
        href={`https://api.whatsapp.com/send?phone=50578731149&text=Hola MoraAzulNic! Miré este producto y quiero más información... [${imgUrl}]`}
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
        >Comprar</a
      >
    </div>
  </div>
</div>
