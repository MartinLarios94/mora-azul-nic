---
import ItemCard from "../components/ItemCard.astro";
import Layout from "../layouts/Layout.astro";
import { BASE_URL } from "../utils/api";
import { PAGES, type API_RESPONSE } from "../utils/types";

const res = await fetch(`${BASE_URL}/${PAGES.jeans}`);
const data: API_RESPONSE[] = await res.json();
---

<Layout title="Mora Azul Nic - Accessorios">
  <article class="grid grid-cols-1 mx-auto py-10 gap-y-3 max-w-xs sm:grid-cols-2 sm:gap-x-3 sm:px-20 lg:grid-cols-3 sm:max-w-5xl">
    {
      data.map(({ precio, imgUrl, srcUrl }) => (
        <ItemCard price={precio} imgUrl={imgUrl} srcUrl={srcUrl} />
      ))
    }
  </article>
</Layout>
